extends layout/main


block content
    .user-profile
            .user-profile__header
                 img.u-avatar(src=user.avatarUrl)
                 h4.profile__username=user.name
            if user.id===loggedUser.id    
                 .user-profile__button   
                      a.button__editProfile(href=`/users${routes.editProfile}`) 🖊 editProfile
                      a.button__changePassword(href=`/users${routes.changePassword}`) 🔐 changePassword